__lua__
-- experiment 1
-- by zetlam
-- moves a circle d-pad.

plr = {}

function _init()
	plr.x = 63
	plr.y = 63
end

function _update()
	if (btn(⬅️)) plr.x -=1
	if (btn(➡️)) plr.x +=1
	if (btn(⬆️)) plr.y -=1
	if (btn(⬇️)) plr.y +=1
end

function _draw()
	cls()
	circ(plr.x,plr.y)
end


