function _draw()
	cls()
	for i=1,#body do
		print(i..": "..body[i].x..","..body[i].y)
	end
end

function grow_snake()
	last=#body
	if last == 0 then
		body[last+1] = {x=10,y=10}
	else
		body[last+1] = {
			x=body[last].x,
			y=body[last].y
		}
	end
end

function move_snake(dx,dy)
	for i=#body,2,-1 do
		body[i].x = body[i-1].x
		body[i].y = body[i-1].y
	end
	body[1].x += dx
	body[1].y += dy
end

