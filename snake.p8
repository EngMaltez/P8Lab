pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
-- snake game
-- by zetlam
snake={}
scale=4

function _init()
	snake.x = 63
	snake.y = 63
	snake.body = {}
	snake.dx = 0
	snake.dy = 0
end

function _update()
	if (btnp(⬅️)) snake.x -= scale
	if (btnp(➡️)) snake.x += scale
	if (btnp(⬆️)) snake.y -= scale
	if (btnp(⬇️)) snake.y += scale
end

function _draw()
	cls()
	-- draw snake head
	rect(snake.x, snake.y, snake.x+scale, snake.y+scale, 12)
	-- draw snake body
	
end


