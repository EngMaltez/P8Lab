-- shockwave

function create_shockwave()
	add(sws,{cx=plr.x, cy=plr.y,r=1})
end

function update_shockwaves()
	for sw in all(sws) do
		sw.r += 0.2
		if sw.r > 60 then
			del(sws,sw)
		end
	end
end

function draw_shockwaves()
	for sw in all(sws) do
		circ(sw.cx,sw.cy,sw.r,12)
	end
end
